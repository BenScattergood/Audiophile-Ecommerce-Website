@model List<ProductViewModel>

@section heroImage {
    <div class="heading__img-container heading__img-container--img">
        <picture>
            <source media="(min-width: 1025px)"
                srcset="/assets/home/desktop/image-hero.jpg" />

            <source media="(min-width: 600px)"
                srcset="/assets/home/tablet/image-header.jpg" />

            <img class="heading__img" src="/assets/home/mobile/image-header.jpg" />
        </picture>
    </div>
}
@section heroText {
    <section class="wrapper">
        <section class="heroText">
            <h5 class="fw-400 text-white-100 opacity-05 fs-main-h5 ls-h5 uppercase">New Product</h5>
            <h2 class="fw-700 text-white-100 fs-main-h1 ls-h1 lh-h1 uppercase">@Model.SingleOrDefault(p => p.Id == 4).Name</h2>
            <p class="fw-500 fs-main-p text-white-100 opacity-075 lh-p">Experience natural, lifelike audio and exceptional build quality made for the passionate music enthusiast.</p>
            <a asp-controller="Product" asp-action="Product" asp-route-id="@Model.SingleOrDefault(p => p.Id == 4).Id" class="margin-t-15 button-main button-main--beige fw-700 text-white-100 fs-button ls-button uppercase">See Product</a>
        </section>
    </section>
}
<main role="main" class="wrapper main-container">
    <partial name="_CategoriesWithWrapper" />
    <div class="main__features-container">
    <article class="home__feature-main">
        <div class="home__feature-main__img-container">
            <picture>
                <source media="(min-width: 1025px)"
                    srcset="/assets/home/desktop/image-speaker-zx9.png" />
                <source media="(min-width: 600px)"
                    srcset="/assets/home/tablet/image-speaker-zx9.png" />
                <img class="image-reset" src="/assets/home/mobile/image-speaker-zx9.png" />
            </picture>
            <img class="home__feature-main__background-img" src="/assets/home/desktop/pattern-circles.svg"/>
        </div>
        <div class="home__feature-main__text features-wrapper--main">
            <h2 class="width-80-mobile fw-700 text-white-100 fs-main-h1 ls-h1 lh-h1 uppercase">@Model.SingleOrDefault(p => p.Id == 6).Name</h2>
            <p class="fw-500 fs-main-p text-white-100 opacity-075 lh-p">Upgrade to premium speakers that are phenomenally built to deliver truly remarkable sound.</p>
                <a asp-controller="Product" asp-action="Product" asp-route-id="@Model.SingleOrDefault(p => p.Id == 6).Id" class="button-main button-main--black fw-700 text-white-100 fs-button ls-button uppercase">See Product</a>
        </div>
    </article>
    <article class="home__feature-other home__feature-other--pri features-wrapper--other">
        <h3 class="text-black-100 fs-main-h3 ls-h3 lh-h3 fw-700 uppercase">@Model.SingleOrDefault(p => p.Id == 5).Name</h3>
            <a asp-controller="Product" asp-action="Product" asp-route-id="@Model.SingleOrDefault(p => p.Id == 5).Id" class="button-main--transparent button-main fw-700 fs-button ls-button uppercase">See Product</a>
    </article>
    <article class="home__feature-other-container">
        <div class="home__feature-other__img-container">
            <picture>
                <source media="(min-width: 1025px)"
                    srcset="/assets/home/desktop/image-earphones-yx1.jpg" />
                <source media="(min-width: 600px)"
                    srcset="/assets/home/tablet/image-earphones-yx1.jpg" />
                <img class="border-radius image-reset" src="/assets/home/mobile/image-earphones-yx1.jpg" />
            </picture>
        </div>
        <article class="home__feature-other home__feature-other--sec features-wrapper--other">
            <h3 class="text-black-100 fs-main-h3 ls-h3 lh-h3 fw-700 uppercase">@Model.SingleOrDefault(p => p.Id == 1).Slug</h3>
            <a asp-controller="Product" asp-action="Product" asp-route-id="@Model.SingleOrDefault(p => p.Id == 1).Id" class="button-main--transparent button-main fw-700 fs-button ls-button uppercase">See Product</a>
        </article>
    </article>
    </div>
    <partial name="_BestGearPartial" />
</main>