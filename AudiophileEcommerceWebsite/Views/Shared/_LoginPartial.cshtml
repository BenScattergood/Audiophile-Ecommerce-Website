@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="nav__avatar">
        <img class="nav__avatar-img" runat="server" src="/assets/image-avatar.png" alt="profile picture" />
    </div>
    <form id="logoutForm" class="LoginPartial__Logout-form hidden" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Product", new { area = "" })">
        <button id="logout" type="submit" class=" pointer LoginPartial__Logout-form__btn fw-500 text-white-100 fs-button ls-button uppercase">Logout</button>
    </form>
}
else
{
    <a class="btn-login fs-button text-white-100 opacity-075" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
}
